[
  {
    "id": "memory_read",
    "name": "Read Memory",
    "description": "Read a value from the key-value memory store by key",
    "category": "remember",
    "organ": "system",
    "input_schema": {
      "type": "object",
      "properties": {
        "key": { "type": "string", "description": "The memory key to read" },
        "namespace": { "type": "string", "default": "default" }
      },
      "required": ["key"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "value": { "description": "The stored value (any type)" },
        "found": { "type": "boolean" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      { "input": { "key": "past_orders" }, "output": { "value": ["Pizza", "Sushi", "Burrito"], "found": true } }
    ]
  },
  {
    "id": "memory_write",
    "name": "Write Memory",
    "description": "Store a value in the key-value memory store",
    "category": "remember",
    "organ": "system",
    "input_schema": {
      "type": "object",
      "properties": {
        "key": { "type": "string" },
        "value": { "description": "Value to store (any type)" },
        "namespace": { "type": "string", "default": "default" }
      },
      "required": ["key", "value"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "key": { "type": "string" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      { "input": { "key": "last_price", "value": 449.99 }, "output": { "success": true, "key": "last_price" } }
    ]
  },
  {
    "id": "memory_append",
    "name": "Append to Memory List",
    "description": "Append a value to a list stored in memory (creates list if it doesn't exist)",
    "category": "remember",
    "organ": "system",
    "input_schema": {
      "type": "object",
      "properties": {
        "key": { "type": "string" },
        "value": { "description": "Value to append to the list" },
        "namespace": { "type": "string", "default": "default" }
      },
      "required": ["key", "value"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "list_length": { "type": "integer" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      { "input": { "key": "price_history", "value": { "price": 399, "date": "2025-03-18" } }, "output": { "success": true, "list_length": 5 } }
    ]
  },
  {
    "id": "miro_add_node",
    "name": "Add Miro Node",
    "description": "Add a concept, fact, or event as a sticky note node to the Miro memory board",
    "category": "remember",
    "organ": "miro",
    "input_schema": {
      "type": "object",
      "properties": {
        "content": { "type": "string", "description": "Text content for the node" },
        "color": { "type": "string", "description": "Node color (e.g. 'yellow', 'blue', 'green')", "default": "yellow" },
        "tags": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["content"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "node_id": { "type": "string" },
        "board_url": { "type": "string" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      { "input": { "content": "PS5 price: â‚¬399 on March 18", "color": "green", "tags": ["price", "ps5"] }, "output": { "node_id": "node_abc123", "board_url": "https://miro.com/board/123" } }
    ]
  },
  {
    "id": "miro_add_connection",
    "name": "Connect Miro Nodes",
    "description": "Draw a connection between two existing nodes on the Miro memory board",
    "category": "remember",
    "organ": "miro",
    "input_schema": {
      "type": "object",
      "properties": {
        "from_node_id": { "type": "string" },
        "to_node_id": { "type": "string" },
        "label": { "type": "string", "description": "Optional label for the connection" }
      },
      "required": ["from_node_id", "to_node_id"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "connection_id": { "type": "string" },
        "success": { "type": "boolean" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      { "input": { "from_node_id": "node_abc", "to_node_id": "node_def", "label": "led to" }, "output": { "connection_id": "conn_001", "success": true } }
    ]
  }
]
