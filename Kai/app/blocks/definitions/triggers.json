[
  {
    "id": "trigger_cron",
    "name": "Scheduled Trigger (Cron)",
    "description": "Triggers a pipeline on a cron schedule, e.g. every Tuesday at 8am",
    "category": "trigger",
    "organ": "system",
    "input_schema": {
      "type": "object",
      "properties": {
        "schedule": { "type": "string", "description": "Cron expression (e.g. '0 8 * * 2')" },
        "timezone": { "type": "string", "description": "IANA timezone (e.g. 'Europe/Dublin')", "default": "UTC" }
      },
      "required": ["schedule"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "triggered_at": { "type": "string", "description": "ISO timestamp when triggered" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      { "input": { "schedule": "0 8 * * 2", "timezone": "Europe/Dublin" }, "output": { "triggered_at": "2025-03-18T08:00:00+00:00" } }
    ]
  },
  {
    "id": "trigger_manual",
    "name": "Manual Trigger",
    "description": "Starts a pipeline immediately when the user says 'do this now'",
    "category": "trigger",
    "organ": "system",
    "input_schema": {
      "type": "object",
      "properties": {
        "user_input": { "type": "string", "description": "Optional user-provided text" }
      }
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "triggered_at": { "type": "string" },
        "user_input": { "type": "string" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      { "input": { "user_input": "find me cheap flights" }, "output": { "triggered_at": "2025-03-18T10:30:00Z", "user_input": "find me cheap flights" } }
    ]
  },
  {
    "id": "trigger_file_upload",
    "name": "File Upload Trigger",
    "description": "Triggers when a user uploads an image, document, or video file",
    "category": "trigger",
    "organ": "system",
    "input_schema": {
      "type": "object",
      "properties": {
        "file_path": { "type": "string", "description": "Path to the uploaded file" },
        "file_type": { "type": "string", "description": "MIME type of the file" }
      },
      "required": ["file_path"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "file_path": { "type": "string" },
        "file_type": { "type": "string" },
        "file_size_bytes": { "type": "integer" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      { "input": { "file_path": "/uploads/receipt.jpg", "file_type": "image/jpeg" }, "output": { "file_path": "/uploads/receipt.jpg", "file_type": "image/jpeg", "file_size_bytes": 245000 } }
    ]
  },
  {
    "id": "trigger_webhook",
    "name": "Webhook Trigger",
    "description": "Triggers when an external service sends a POST request to our webhook endpoint",
    "category": "trigger",
    "organ": "system",
    "input_schema": {
      "type": "object",
      "properties": {
        "endpoint_path": { "type": "string", "description": "URL path for the webhook (e.g. '/hooks/my-trigger')" }
      },
      "required": ["endpoint_path"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "payload": { "type": "object", "description": "JSON body from the webhook call" },
        "headers": { "type": "object" },
        "method": { "type": "string" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      { "input": { "endpoint_path": "/hooks/github-push" }, "output": { "payload": { "ref": "refs/heads/main" }, "headers": {}, "method": "POST" } }
    ]
  }
]
