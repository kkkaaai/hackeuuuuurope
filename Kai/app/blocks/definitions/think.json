  {
    "id": "claude_decide",
    "name": "Decide (Claude)",
    "description": "Use Claude to pick the best option from a set of choices based on criteria",
    "category": "think",
    "organ": "claude",
    "input_schema": {
      "type": "object",
      "properties": {
        "options": { "type": "array", "items": { "type": "object" }, "description": "List of options to choose from" },
        "criteria": { "type": "string", "description": "Decision criteria (e.g. 'cheapest', 'closest', 'healthiest')" },
        "context": { "type": "string", "description": "Additional context for the decision" }
      },
      "required": ["options", "criteria"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "chosen": { "type": "object", "description": "The selected option" },
        "reasoning": { "type": "string", "description": "Why this option was chosen" },
        "confidence": { "type": "number" }
      }
    },
    "api_type": "real",
    "tier": 1,
    "examples": [
      {
        "input": { "options": [{ "name": "Restaurant A", "price": 12 }, { "name": "Restaurant B", "price": 8 }], "criteria": "cheapest under €15" },
        "output": { "chosen": { "name": "Restaurant B", "price": 8 }, "reasoning": "Restaurant B is the cheapest at €8", "confidence": 0.95 }
      }
    ]
  },
